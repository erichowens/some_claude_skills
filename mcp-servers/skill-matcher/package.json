{
  "name": "@someclaudeskills/skill-matcher",
  "version": "1.2.0",
  "description": "MCP server for semantic skill matching using embeddings",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "skill-matcher": "./dist/index.js",
    "skill-matcher-http": "./dist/http-server.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "dev:http": "tsx watch src/http-server.ts",
    "start": "node dist/index.js",
    "start:http": "node dist/http-server.js",
    "index": "tsx src/indexer.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "claude",
    "skills",
    "embeddings",
    "semantic-search"
  ],
  "author": "Some Claude Skills",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "glob": "^10.3.10",
    "gray-matter": "^4.0.3",
    "helmet": "^8.1.0",
    "hnswlib-node": "^3.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
