      "id": "saas-conversion",
      "name": "SaaS Conversion",
      "description": "Optimized for B2B SaaS products with trial/demo focus",
      "sections": [
        {
          "type": "hero",
          "position": 1,
          "headline": "action-oriented, benefit-focused (e.g., 'Ship faster with confidence')",
          "subheadline": "elaborate on benefit, address pain point",
          "cta": { "primary": "Start free trial", "secondary": "See demo" },
          "socialProof": "customer logos or metrics ('Trusted by 10,000+ teams')",
          "visual": "product screenshot, hero animation, or abstract illustration",
          "height": "100vh or generous (80vh minimum)"
        },
        {
          "type": "social-proof-bar",
          "position": 2,
          "format": "logo wall of recognizable customers",
          "count": "5-8 logos",
          "style": "grayscale, muted, non-distracting"
        },
        {
          "type": "features",
          "position": 3,
          "layout": "3-column grid or alternating rows with screenshots",
          "content": "icon + headline + description",
          "count": "3-6 features",
          "depth": "brief (2-3 sentences each)"
        },
        {
          "type": "how-it-works",
          "position": 4,
          "format": "3-step numbered process",
          "visual": "illustrations or screenshots for each step",
          "purpose": "reduce perceived complexity"
        },
        {
          "type": "testimonials",
          "position": 5,
          "format": "2-3 featured quotes with photos and titles",
          "content": "specific results, not generic praise",
          "trust": "real names, company logos, LinkedIn links"
        },
        {
          "type": "pricing",
          "position": 6,
          "format": "3-tier with highlighted 'recommended' option",
          "features": "feature comparison matrix below",
          "cta": "per-tier CTAs with different copy"
        },
        {
          "type": "faq",
          "position": 7,
          "format": "accordion with 5-8 questions",
          "content": "address objections and reduce support load",
          "seo": "structured data for rich snippets"
        },
        {
          "type": "final-cta",
          "position": 8,
          "format": "repeat primary CTA with urgency or summary",
          "headline": "Ready to [benefit]?",
          "design": "full-width background, high contrast"
        }
      ],
      "bestFor": ["B2B SaaS", "productivity tools", "developer tools"],
      "conversionFocus": "trial signup or demo request",
      "examples": ["linear.app", "notion.so", "vercel.com", "stripe.com"]
    },
