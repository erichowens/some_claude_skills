  "guidelines": {
    "general": [
      "Sound should enhance, not annoy",
      "Always respect system mute/sound settings",
      "Provide sound toggles in app settings",
      "Less is more - don't overuse",
      "Ensure sounds are distinctive for different actions"
    ],
    "accessibility": [
      "Never rely solely on sound for information",
      "Provide visual alternatives for all audio feedback",
      "Support screen reader announcements",
      "Respect prefers-reduced-motion (may imply reduced audio)"
    ],
    "technical": [
      "Use Web Audio API for precise timing",
      "Preload sounds for instant playback",
      "Keep file sizes small (<50KB per sound)",
      "Use appropriate formats (MP3, OGG, WAV)",
      "Handle audio context initialization on user gesture"
    ],
    "branding": [
      "Sound should match brand personality",
      "Consistent sound palette across app",
      "Consider custom sounds for brand recognition",
      "Test sounds with different speakers/headphones"
    ]
