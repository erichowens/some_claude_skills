    {
      "id": "tap-click",
      "name": "Tap/Click Feedback",
      "category": "feedback",
      "description": "Subtle audio confirmation of button press",
      "characteristics": {
        "duration": "50-100ms",
        "frequency": "mid-range (800-1200Hz)",
        "envelope": "sharp attack, quick decay",
        "style": "soft click, pop, or tick"
      },
      "usage": {
        "when": "button press, toggle, checkbox",
        "volume": "very quiet, barely audible"
      },
      "variants": {
        "soft": "gentle tap for minor actions",
        "firm": "slightly more pronounced for primary actions"
      },
      "examples": ["iOS keyboard clicks", "material design taps"],
      "accessibility": "must be optional, respect system settings"
    },
    {
      "id": "success-chime",
      "name": "Success Chime",
      "category": "feedback",
      "description": "Positive completion sound",
      "characteristics": {
        "duration": "200-400ms",
        "notes": "ascending or major chord",
        "frequency": "higher pitch (positive association)",
        "envelope": "soft attack, medium sustain"
      },
      "usage": {
        "when": "form submitted, task completed, purchase confirmed",
        "pairing": "with visual success indicator"
      },
      "psychology": "major intervals sound happy and resolved",
      "examples": ["Stripe checkout success", "Duolingo correct answer"]
    },
    {
      "id": "error-sound",
      "name": "Error Sound",
      "category": "feedback",
      "description": "Negative feedback without being alarming",
      "characteristics": {
