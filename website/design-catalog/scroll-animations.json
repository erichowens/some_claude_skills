      "animation": {
        "from": { "opacity": 0 },
        "to": { "opacity": 1 },
        "duration": "0.6s"
      },
      "implementation": {
        "css": "IntersectionObserver + CSS transition",
        "framer": "whileInView prop",
        "libraries": ["AOS", "ScrollReveal"]
      },
      "bestFor": "general content reveal"
