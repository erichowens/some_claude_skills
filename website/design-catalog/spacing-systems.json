  "principles": [
    {
      "id": "internal-vs-external",
      "name": "Internal vs External Spacing",
      "category": "principles",
      "description": "Padding vs margin distinction",
      "internal": {
        "what": "padding within components",
        "controls": "component controls its own padding",
        "consistent": "same component = same padding"
      },
      "external": {
        "what": "margin between components",
        "controls": "parent or layout controls",
        "varies": "depends on context"
      },
      "bestPractice": "components define padding, layouts define gaps"
    },
    {
      "id": "proximity-principle",
      "name": "Law of Proximity",
      "category": "principles",
      "description": "Related items should be closer together",
      "implementation": {
        "groups": "less space within groups",
        "sections": "more space between sections"
      },
      "ratio": "internal spacing ~60% of external spacing",
      "example": {
